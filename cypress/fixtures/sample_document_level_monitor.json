{
  "type": "monitor",
  "monitor_type": "doc_level_monitor",
  "name": "sample_document_level_monitor",
  "enabled": true,
  "createdBy": "chip",
  "schedule": {
    "period": {
      "interval": 1,
      "unit": "MINUTES"
    }
  },
  "inputs": [
    {
      "doc_level_input": {
        "description": "windows-powershell",
        "indices": ["document-level-monitor-test-index"],
        "queries": [
          {
            "id": "sigma-123",
            "name": "sigma-123",
            "query": "region:\"us-west-2\"",
            "tags": ["MITRE:8500"]
          },
          {
            "id": "sigma-456",
            "name": "sigma-456",
            "query": "region:\"us-east-1\"",
            "tags": ["MITRE:8600"]
          },
          {
            "id": "sigma-789",
            "name": "sigma-789",
            "query": "message:\"This is an error from IAD region\"",
            "tags": ["MITRE:8700"]
          }
        ]
      }
    }
  ],
  "triggers": [
    {
      "document_level_trigger": {
        "name": "sample_trigger",
        "severity": "1",
        "condition": {
          "script": {
            "source": "query[name=sigma-123] || query[name=sigma-456] || query[name=sigma-789]",
            "lang": "painless"
          }
        },
        "actions": []
      }
    }
  ]
}
